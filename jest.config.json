{
  "preset": "react-native",
  "setupFilesAfterEnv": ["<rootDir>/src/utils/testSetup.ts"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/.expo/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(react-native|@react-native|expo|@expo|react-native-vector-icons|react-native-svg)/)"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "testMatch": [
    "**/__tests__/**/*.(ts|tsx|js|jsx)",
    "**/*.(test|spec).(ts|tsx|js|jsx)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/*.stories.{ts,tsx}",
    "!src/**/index.{ts,tsx}"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
